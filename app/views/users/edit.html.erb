<p id="notice"><%= notice %></p>

<%= form_for(current_user) do |f| %>
	<%= hidden_field_tag :setting, 'edit' %>

	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

			<ul>
				<% @user.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>

	<div class="field">
		<%= f.label :username %><br />
		<%= f.text_field :username %>
	</div>

	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>

	<br />
	<div class="actions">
		<%= f.submit 'Save' %>
	</div>
<% end %>

